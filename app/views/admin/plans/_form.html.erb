<%= simple_form_for [:admin, @plan], html: { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  <%= f.input :description, as: :text, input_html: { :rows => 10 } %>
  <%= f.input :price %>
  <%= f.input :service_id, collection: Service.all, as: :select, include_blank: false %>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn-primary' %>
    <%= link_to t('.cancel', default: t("helpers.links.cancel")),
                admin_plans_path, class: 'btn' %>
  </div>
<% end %>
