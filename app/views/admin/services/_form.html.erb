<%= simple_form_for [:admin, @service], html: { class: 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  <div class="form-actions">
    <%= f.button :submit, class: 'btn-primary' %>
    <%= link_to t('.cancel', default: t("helpers.links.cancel")),
                admin_services_path, class: 'btn' %>
  </div>
<% end %>
